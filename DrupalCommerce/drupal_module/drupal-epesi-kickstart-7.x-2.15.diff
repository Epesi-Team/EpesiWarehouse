+    $bad_csrf_token_headers = array('X-CSRF-Token: ' . $this->randomString());
+    $response = $this->servicesPostNoCSRFHeader($this->endpoint->path . '/system/get_variable', $get_variable_args, $bad_csrf_token_headers);
