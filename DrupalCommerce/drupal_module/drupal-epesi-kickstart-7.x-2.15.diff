+function services_views_access($op = 'view', $args = array()) {
+  switch ($op) {
+    case 'view':
+      $view = views_get_view($args['view_name']);
+      if (empty($view)) {
+        return services_error(t('View @view could not be found', array('@view' => $args['view_name'])), 404);
