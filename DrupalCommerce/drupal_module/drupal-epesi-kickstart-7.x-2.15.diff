+  unset($form['settings']['help']);
+  $form['settings']['event']['#type'] = 'value';
+  $form['settings']['event']['#value'] = 'commerce_stock_add_to_cart_check_product';
+  $form['submit']['#suffix'] = l(t('Cancel'), 'admin/commerce/config/stock/validation');
+}
+
