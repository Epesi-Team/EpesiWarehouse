+    'callback' => 'rules_admin_add_reaction_rule',
+  );
+  $forms['commerce_stock_ui_add_cart_action_rule_form'] = array(
+    'callback' => 'rules_admin_add_reaction_rule',
+  );
+  $forms['commerce_stock_ui_add_checkout_rule_form'] = array(
+    'callback' => 'rules_admin_add_reaction_rule',
+  );
+  $forms['commerce_stock_ui_stock_control_rule_form'] = array(
+    'callback' => 'rules_admin_add_reaction_rule',
+  );
+  return $forms;
+}
