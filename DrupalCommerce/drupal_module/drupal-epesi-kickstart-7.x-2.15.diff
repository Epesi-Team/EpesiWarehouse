+function _rest_server_settings_submit($endpoint, &$values) {
+  $values['formatters'] = array_map('_rest_server_settings_not_zero', $values['formatters']);
+  $values['parsers'] = array_map('_rest_server_settings_not_zero', $values['parsers']);
