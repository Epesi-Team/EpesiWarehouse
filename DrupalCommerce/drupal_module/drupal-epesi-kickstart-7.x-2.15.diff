+  public function __construct($message, $code = 0, $data = NULL) {
+    parent::__construct($message, $code);
+
+    $this->data = !empty($data) ? $data : $message;
+  }
+
+  /**
+   * Returns the data associated with the exception.
+   *
+   * @return mixed
+   */
+  public function getData() {
+    return $this->data;
+  }
